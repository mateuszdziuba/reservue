{
  "extends": "@reservue/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/ui/src/lib",
    "../../packages/ui",
    "../../packages/ui"
  ],
  "exclude": ["node_modules"]
}
